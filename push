#!/bin/sh
commit=""
file_name=""

display_usage() {
    echo "Usage: $0 [-d] [-f file_name] commit_message"
    exit 84
}

while getopts ":df:" opt; do
    case $opt in
        d)
            script-manager
            ;;
        f)
            file_name="$OPTARG"
            ;;
        \?)
            echo "Invalid option: -$OPTARG"
            display_usage
            ;;
    esac
done
shift $((OPTIND-1))
if [ $# -ne 1 ]; then
    display_usage
fi
commit="$1"
if [ -n "$file_name" ]; then
    git add "$file_name"
else
    git add .
fi
git commit -m "$commit"
git push origin main
