#!/bin/sh
# This script will create a C file with the epitech Header
# Usage: ./touch_h [file_name]

if [ "$1" != "-d" ]
then
    script-manager
fi
if (( $# != 1 )); then
    echo "Usage: ./touch_h [file_name]"
    exit 84
fi

if [ -f "$2.c" ]; then
    echo "Error: File $2.c already exists"
    exit 84
fi

touch "$2.c"
if (( $? != 0 )); then
    echo "Error: Can't create file $2.c"
    exit 84
fi

basepwd=$(pwd)
currentpwd=$(pwd)
dirname="Unknown"

while [ "$currentpwd" != "/" ]; do
    if [ -d "$currentpwd/.git" ]; then
        dirname=$(git config --get remote.origin.url | sed 's/.*\///' | sed 's/\.git//')
        break
    fi
    currentpwd=$(dirname $currentpwd)
done

# Determine the depth of the file relative to the project root
depth=""
currentdir="$basepwd"
projectroot=$(git rev-parse --show-toplevel)  # Trouve le rÃ©pertoire racine du projet

while [ "$currentdir" != "$projectroot" ]; do
    depth="../$depth"
    currentdir=$(dirname "$currentdir")
done

year=$(date +%Y)
echo "/*
** EPITECH PROJECT, $year
** $dirname
** File description:
** $2.c
*/" > $basepwd/"$2.c"

include="include/my.h"
if [ -n "$depth" ]; then
    include="${depth}${include}"
fi

echo -e "\n#include \"$include\"\n\nint $2(void)\n{\n    return 0;\n}\n\nint main(void)\n{\n    $2();\n    return (0);\n}" >> $basepwd/"$2.c"
G='\033[0;32m'
NC='\033[0m'
RED='\e[0;31m'
echo -e "${G}file $2.c has been created${NC}"
code $2.c
echo -e "${RED}Loading resources...${NC}"
